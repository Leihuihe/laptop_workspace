public class PP10_3
{

	public static void main(String[] args) throws StringTooLongExceptionr
	{
		StdOut.print("Pls. enter a string(\"DONE\" to stop): ");
		String s = StdIn.readString();
		if(s.length()>=20)
		{
			StdOut.print("\nToo long, pls. re-enter: ");
			s = StdIn.readString();
		}
	}

}
